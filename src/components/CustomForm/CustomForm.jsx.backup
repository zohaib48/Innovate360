import { useState } from 'react';

const CustomBookingInterface = () => {
  const [currentStep, setCurrentStep] = useState(1); // 1: Calendar, 2: Time Slots, 3: Form
  const [selectedDate, setSelectedDate] = useState(null);
  const [selectedTime, setSelectedTime] = useState(null);
  const [currentMonth, setCurrentMonth] = useState(new Date());
  const [formData, setFormData] = useState({ 
    name: '', 
    email: '', 
    phone: '',
    notes: '' 
  });

  // Generate calendar days
  const generateCalendarDays = () => {
    const year = currentMonth.getFullYear();
    const month = currentMonth.getMonth();
    const firstDay = new Date(year, month, 1);
    const lastDay = new Date(year, month + 1, 0);
    const daysInMonth = lastDay.getDate();
    const startingDayOfWeek = firstDay.getDay();
    
    const days = [];
    
    for (let i = 0; i < startingDayOfWeek; i++) {
      days.push(null);
    }
    
    for (let day = 1; day <= daysInMonth; day++) {
      days.push(new Date(year, month, day));
    }
    
    return days;
  };

  // Available time slots
  const availableTimes = [
    '9:00am', '9:30am', '10:00am', '10:30am', '11:00am', '11:30am',
    '12:00pm', '12:30pm', '1:00pm', '1:30pm', '2:00pm', '2:30pm',
    '3:00pm', '3:30pm', '4:00pm', '4:30pm', '5:00pm', '5:30pm'
  ];

  const handleDateClick = (date) => {
    if (!date) return;
    
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    
    if (date < today) return;
    
    setSelectedDate(date);
    setCurrentStep(2); // Move to time selection
  };

  const handleTimeClick = (time) => {
    setSelectedTime(time);
    setCurrentStep(3); // Move to form
  };

  const handleBooking = () => {
    const bookingData = {
      date: selectedDate.toDateString(),
      time: selectedTime,
      name: formData.name,
      email: formData.email,
      phone: formData.phone,
      notes: formData.notes
    };
    
    console.log('Booking data for Calendly API:', bookingData);
    alert(`Booking confirmed!\nDate: ${selectedDate.toDateString()}\nTime: ${selectedTime}\nName: ${formData.name}\nEmail: ${formData.email}`);
    
    // Reset to step 1
    setCurrentStep(1);
    setSelectedDate(null);
    setSelectedTime(null);
    setFormData({ name: '', email: '', phone: '', notes: '' });
  };

  const changeMonth = (direction) => {
    const newMonth = new Date(currentMonth);
    newMonth.setMonth(currentMonth.getMonth() + direction);
    setCurrentMonth(newMonth);
  };

  const isToday = (date) => {
    if (!date) return false;
    const today = new Date();
    return date.toDateString() === today.toDateString();
  };

  const isPastDate = (date) => {
    if (!date) return false;
    const today = new Date();
    today.setHours(0, 0, 0, 0);
    return date < today;
  };

  const goBack = () => {
    if (currentStep === 2) {
      setCurrentStep(1);
      setSelectedDate(null);
    } else if (currentStep === 3) {
      setCurrentStep(2);
      setSelectedTime(null);
    }
  };

  const monthNames = ["January", "February", "March", "April", "May", "June",
    "July", "August", "September", "October", "November", "December"
  ];

  const weekDays = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];

  return (
    <div style={{
      background: 'linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%)',
      borderRadius: '20px',
      padding: '28px',
      boxShadow: '0 20px 60px rgba(0,0,0,0.7), 0 0 0 1px rgba(191, 255, 0, 0.1)',
      border: '1px solid #2a2a2a',
      fontFamily: 'system-ui, -apple-system, sans-serif',
      width: '100%',
      maxWidth: '500px',
      minHeight: '500px',
      display: 'flex',
      flexDirection: 'column',
      position: 'relative'
    }}>
      {/* Header */}
      <div style={{ marginBottom: '24px', textAlign: 'center' }}>
        <h2 style={{
          color: '#ffffff',
          fontSize: '24px',
          fontWeight: '700',
          marginBottom: '6px',
          letterSpacing: '-0.5px'
        }}>
          Schedule a Meeting
        </h2>
        <p style={{
          color: '#888',
          fontSize: '13px',
          marginBottom: '10px'
        }}>
          {currentStep === 1 && 'Step 1: Choose a date'}
          {currentStep === 2 && 'Step 2: Pick your preferred time'}
          {currentStep === 3 && 'Step 3: Enter your details'}
        </p>
        
        {/* Progress Indicator */}
        <div style={{
          display: 'flex',
          justifyContent: 'center',
          gap: '6px',
          marginTop: '12px'
        }}>
          {[1, 2, 3].map(step => (
            <div key={step} style={{
              width: currentStep === step ? '32px' : '10px',
              height: '10px',
              borderRadius: '5px',
              background: currentStep >= step ? '#bfff00' : '#2a2a2a',
              transition: 'all 0.3s ease'
            }} />
          ))}
        </div>
      </div>

      {/* Back Button */}
      {currentStep > 1 && (
        <button
          onClick={goBack}
          style={{
            position: 'absolute',
            top: '28px',
            left: '28px',
            background: 'transparent',
            border: '1px solid #2a2a2a',
            color: '#bfff00',
            padding: '6px 12px',
            borderRadius: '6px',
            cursor: 'pointer',
            fontSize: '12px',
            fontWeight: '500',
            transition: 'all 0.3s ease'
          }}
          onMouseEnter={(e) => {
            e.currentTarget.style.background = '#2a2a2a';
            e.currentTarget.style.borderColor = '#bfff00';
          }}
          onMouseLeave={(e) => {
            e.currentTarget.style.background = 'transparent';
            e.currentTarget.style.borderColor = '#2a2a2a';
          }}
        >
          ← Back
        </button>
      )}

      {/* STEP 1: Calendar */}
      {currentStep === 1 && (
        <div style={{
          flex: 1,
          display: 'flex',
          flexDirection: 'column',
          animation: 'fadeIn 0.4s ease'
        }}>
          <style>{`
            @keyframes fadeIn {
              from { opacity: 0; transform: translateY(20px); }
              to { opacity: 1; transform: translateY(0); }
            }
          `}</style>

          <div style={{
            display: 'flex',
            justifyContent: 'space-between',
            alignItems: 'center',
            marginBottom: '16px'
          }}>
            <button
              onClick={() => changeMonth(-1)}
              style={{
                background: 'transparent',
                border: '1px solid #2a2a2a',
                color: '#bfff00',
                width: '32px',
                height: '32px',
                borderRadius: '8px',
                cursor: 'pointer',
                fontSize: '16px',
                transition: 'all 0.3s ease'
              }}
              onMouseEnter={(e) => e.currentTarget.style.background = '#2a2a2a'}
              onMouseLeave={(e) => e.currentTarget.style.background = 'transparent'}
            >
              ←
            </button>
            <h3 style={{
              color: '#ffffff',
              fontSize: '16px',
              fontWeight: '600'
            }}>
              {monthNames[currentMonth.getMonth()]} {currentMonth.getFullYear()}
            </h3>
            <button
              onClick={() => changeMonth(1)}
              style={{
                background: 'transparent',
                border: '1px solid #2a2a2a',
                color: '#bfff00',
                width: '32px',
                height: '32px',
                borderRadius: '8px',
                cursor: 'pointer',
                fontSize: '16px',
                transition: 'all 0.3s ease'
              }}
              onMouseEnter={(e) => e.currentTarget.style.background = '#2a2a2a'}
              onMouseLeave={(e) => e.currentTarget.style.background = 'transparent'}
            >
              →
            </button>
          </div>

          {/* Week days */}
          <div style={{
            display: 'grid',
            gridTemplateColumns: 'repeat(7, 1fr)',
            gap: '6px',
            marginBottom: '8px'
          }}>
            {weekDays.map(day => (
              <div key={day} style={{
                textAlign: 'center',
                color: '#666',
                fontSize: '11px',
                fontWeight: '600',
                padding: '6px 0'
              }}>
                {day}
              </div>
            ))}
          </div>

          {/* Days grid */}
          <div style={{
            display: 'grid',
            gridTemplateColumns: 'repeat(7, 1fr)',
            gap: '6px',
            flex: 1
          }}>
            {generateCalendarDays().map((date, index) => (
              <button
                key={index}
                onClick={() => handleDateClick(date)}
                disabled={!date || isPastDate(date)}
                style={{
                  aspectRatio: '1',
                  border: date && isToday(date) 
                    ? '2px solid #bfff00' 
                    : '1px solid #2a2a2a',
                  background: date && isToday(date) 
                    ? '#2a2a2a'
                    : 'transparent',
                  color: !date || isPastDate(date) ? '#333' : '#ffffff',
                  borderRadius: '8px',
                  cursor: date && !isPastDate(date) ? 'pointer' : 'default',
                  fontSize: '13px',
                  fontWeight: date && isToday(date) ? '700' : '500',
                  transition: 'all 0.3s ease',
                  opacity: !date || isPastDate(date) ? '0.3' : '1'
                }}
                onMouseEnter={(e) => {
                  if (date && !isPastDate(date)) {
                    e.currentTarget.style.background = '#2a2a2a';
                    e.currentTarget.style.borderColor = '#bfff00';
                    e.currentTarget.style.transform = 'scale(1.05)';
                  }
                }}
                onMouseLeave={(e) => {
                  if (date && !isPastDate(date) && !isToday(date)) {
                    e.currentTarget.style.background = 'transparent';
                    e.currentTarget.style.borderColor = '#2a2a2a';
                  }
                  e.currentTarget.style.transform = 'scale(1)';
                }}
              >
                {date ? date.getDate() : ''}
              </button>
            ))}
          </div>
        </div>
      )}

      {/* STEP 2: Time Slots */}
      {currentStep === 2 && (
        <div style={{
          flex: 1,
          display: 'flex',
          flexDirection: 'column',
          animation: 'fadeIn 0.4s ease'
        }}>
          <h3 style={{
            color: '#bfff00',
            fontSize: '16px',
            fontWeight: '600',
            marginBottom: '6px'
          }}>
            {selectedDate?.toLocaleDateString('en-US', { 
              weekday: 'long', 
              month: 'long', 
              day: 'numeric',
              year: 'numeric'
            })}
          </h3>
          <p style={{
            color: '#888',
            fontSize: '12px',
            marginBottom: '16px'
          }}>
            Select your preferred time slot
          </p>
          
          <div style={{
            display: 'grid',
            gridTemplateColumns: 'repeat(3, 1fr)',
            gap: '8px',
            maxHeight: '360px',
            overflowY: 'auto',
            paddingRight: '6px',
            scrollbarWidth: 'thin',
            scrollbarColor: '#bfff00 #2a2a2a'
          }}>
            <style>{`
              div::-webkit-scrollbar {
                width: 6px;
              }
              div::-webkit-scrollbar-track {
                background: #2a2a2a;
                border-radius: 10px;
              }
              div::-webkit-scrollbar-thumb {
                background: linear-gradient(180deg, #bfff00 0%, #9dcc00 100%);
                border-radius: 10px;
              }
            `}</style>
            
            {availableTimes.map((time) => (
              <button
                key={time}
                onClick={() => handleTimeClick(time)}
                style={{
                  padding: '12px',
                  background: '#1a1a1a',
                  border: '1px solid #2a2a2a',
                  color: '#ffffff',
                  borderRadius: '10px',
                  cursor: 'pointer',
                  fontSize: '13px',
                  fontWeight: '600',
                  transition: 'all 0.3s ease'
                }}
                onMouseEnter={(e) => {
                  e.currentTarget.style.background = 'linear-gradient(135deg, #bfff00 0%, #9dcc00 100%)';
                  e.currentTarget.style.color = '#000000';
                  e.currentTarget.style.borderColor = '#bfff00';
                  e.currentTarget.style.transform = 'translateY(-2px)';
                  e.currentTarget.style.boxShadow = '0 6px 20px rgba(191, 255, 0, 0.3)';
                }}
                onMouseLeave={(e) => {
                  e.currentTarget.style.background = '#1a1a1a';
                  e.currentTarget.style.color = '#ffffff';
                  e.currentTarget.style.borderColor = '#2a2a2a';
                  e.currentTarget.style.transform = 'translateY(0)';
                  e.currentTarget.style.boxShadow = 'none';
                }}
              >
                {time}
              </button>
                color: '#bfff00',
                width: '32px',
                height: '32px',
                borderRadius: '8px',
                cursor: 'pointer',
                fontSize: '16px',
                transition: 'all 0.3s ease'
              }}
              onMouseEnter={(e) => e.currentTarget.style.background = '#2a2a2a'}
              onMouseLeave={(e) => e.currentTarget.style.background = 'transparent'}
            >
              ←
            </button>
            <h3 style={{
              color: '#ffffff',
              fontSize: '16px',
              fontWeight: '600'
            }}>
              {monthNames[currentMonth.getMonth()]} {currentMonth.getFullYear()}
            </h3>
            <button
              onClick={() => changeMonth(1)}
              style={{
                background: 'transparent',
                border: '1px solid #2a2a2a',
                color: '#bfff00',
                width: '32px',
                height: '32px',
                borderRadius: '8px',
                cursor: 'pointer',
                fontSize: '16px',
                transition: 'all 0.3s ease'
              }}
              onMouseEnter={(e) => e.currentTarget.style.background = '#2a2a2a'}
              onMouseLeave={(e) => e.currentTarget.style.background = 'transparent'}
            >
              →
            </button>
          </div>

          {/* Week days */}
          <div style={{
            display: 'grid',
            gridTemplateColumns: 'repeat(7, 1fr)',
            gap: '6px',
            marginBottom: '8px'
          }}>
            {weekDays.map(day => (
              <div key={day} style={{
                textAlign: 'center',
                color: '#666',
                fontSize: '11px',
                fontWeight: '600',
                padding: '6px 0'
              }}>
                {day}
              </div>
            ))}
          </div>

          {/* Days grid */}
          <div style={{
            display: 'grid',
            gridTemplateColumns: 'repeat(7, 1fr)',
            gap: '6px',
            flex: 1
          }}>
            {generateCalendarDays().map((date, index) => (
              <button
                key={index}
                onClick={() => handleDateClick(date)}
                disabled={!date || isPastDate(date)}
                style={{
                  aspectRatio: '1',
                  border: date && isToday(date) 
                    ? '2px solid #bfff00' 
                    : '1px solid #2a2a2a',
                  background: date && isToday(date) 
                    ? '#2a2a2a'
                    : 'transparent',
                  color: !date || isPastDate(date) ? '#333' : '#ffffff',
                  borderRadius: '8px',
                  cursor: date && !isPastDate(date) ? 'pointer' : 'default',
                  fontSize: '13px',
                  fontWeight: date && isToday(date) ? '700' : '500',
                  transition: 'all 0.3s ease',
                  opacity: !date || isPastDate(date) ? '0.3' : '1'
                }}
                onMouseEnter={(e) => {
                  if (date && !isPastDate(date)) {
                    e.currentTarget.style.background = '#2a2a2a';
                    e.currentTarget.style.borderColor = '#bfff00';
                    e.currentTarget.style.transform = 'scale(1.05)';
                  }
                }}
                onMouseLeave={(e) => {
                  if (date && !isPastDate(date) && !isToday(date)) {
                    e.currentTarget.style.background = 'transparent';
                    e.currentTarget.style.borderColor = '#2a2a2a';
                  }
                  e.currentTarget.style.transform = 'scale(1)';
                }}
              >
                {date ? date.getDate() : ''}
              </button>
            ))}
          </div>
        </div>
      )}

      {/* STEP 2: Time Slots */}
      {currentStep === 2 && (
        <div style={{
          flex: 1,
          display: 'flex',
          flexDirection: 'column',
          animation: 'fadeIn 0.4s ease'
        }}>
          <h3 style={{
            color: '#bfff00',
            fontSize: '16px',
            fontWeight: '600',
            marginBottom: '6px'
          }}>
            {selectedDate?.toLocaleDateString('en-US', { 
              weekday: 'long', 
              month: 'long', 
              day: 'numeric',
              year: 'numeric'
            })}
          </h3>
          <p style={{
            color: '#888',
            fontSize: '12px',
            marginBottom: '16px'
          }}>
            Select your preferred time slot
          </p>
          
          <div style={{
            display: 'grid',
            gridTemplateColumns: 'repeat(3, 1fr)',
            gap: '8px',
            maxHeight: '360px',
            overflowY: 'auto',
            paddingRight: '6px',
            scrollbarWidth: 'thin',
            scrollbarColor: '#bfff00 #2a2a2a'
          }}>
            <style>{`
              div::-webkit-scrollbar {
                width: 6px;
              }
              div::-webkit-scrollbar-track {
                background: #2a2a2a;
                border-radius: 10px;
              }
              div::-webkit-scrollbar-thumb {
                background: linear-gradient(180deg, #bfff00 0%, #9dcc00 100%);
                border-radius: 10px;
              }
            `}</style>
            
            {availableTimes.map((time) => (
              <button
                key={time}
                onClick={() => handleTimeClick(time)}
                style={{
                  padding: '12px',
                  background: '#1a1a1a',
                  border: '1px solid #2a2a2a',
                  color: '#ffffff',
                  borderRadius: '10px',
                  cursor: 'pointer',
                  fontSize: '13px',
                  fontWeight: '600',
                  transition: 'all 0.3s ease'
                }}
                onMouseEnter={(e) => {
                  e.currentTarget.style.background = 'linear-gradient(135deg, #bfff00 0%, #9dcc00 100%)';
                  e.currentTarget.style.color = '#000000';
                  e.currentTarget.style.borderColor = '#bfff00';
                  e.currentTarget.style.transform = 'translateY(-2px)';
                  e.currentTarget.style.boxShadow = '0 6px 20px rgba(191, 255, 0, 0.3)';
                }}
                onMouseLeave={(e) => {
                  e.currentTarget.style.background = '#1a1a1a';
                  e.currentTarget.style.color = '#ffffff';
                  e.currentTarget.style.borderColor = '#2a2a2a';
                  e.currentTarget.style.transform = 'translateY(0)';
                  e.currentTarget.style.boxShadow = 'none';
                }}
              >
                {time}
              </button>
            ))}
          </div>
        </div>
      )}

      {/* STEP 3: Form */}
      {currentStep === 3 && (
        <div style={{
          flex: 1,
          display: 'flex',
          flexDirection: 'column',
          animation: 'fadeIn 0.4s ease'
        }}>
          <div style={{
            background: '#151515',
            padding: '14px',
            borderRadius: '10px',
            marginBottom: '16px',
            border: '1px solid #2a2a2a'
          }}>
            <p style={{ color: '#888', fontSize: '11px', marginBottom: '3px' }}>Selected Date & Time:</p>
            <p style={{ color: '#bfff00', fontSize: '14px', fontWeight: '600' }}>
              {selectedDate?.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })} at {selectedTime}
